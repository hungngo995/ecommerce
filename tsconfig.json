{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    "removeComments": true,
    "target": "ES2015",     
    "watch": true,                   
    "module": "commonjs",                     
    "sourceMap": false,                   
    "outDir": "./dist",                        
    // "rootDir": "./server",   
    "esModuleInterop": true,                   
    "baseUrl": "./server",                      
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  },
  "include": [
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
